{{#sidebar.section class="content" as |section|}}
  {{#section.header as |header|}}
    {{#header.content as |content|}}
      {{content.type value=model.typeName}}
      {{content.identifier value=model.identifier}}
    {{/header.content}}
  {{/section.header}}
  {{#if model.loops.ordered}}
    {{#section.custom class="loops"}}
      {{#each model.loops.ordered as |loop|}}
        {{ui-block/project/inspector/selection/sprites/sprite/tab/loops/loop loop=loop select=(action "select" loop)}}
      {{/each}}
    {{/section.custom}}
  {{else}}
    {{section.placeholder value="No loops"}}
  {{/if}}
{{/sidebar.section}}

{{#sidebar.section as |section|}}
  {{#section.actions as |actions|}}
    {{actions.button value="Add new loop" action=(action "createLoop")}}
  {{/section.actions}}
{{/sidebar.section}}
