{{#ui-block/sidebar class="content" disabled=locked as |sidebar|}}

  {{#sidebar.section class="header" as |section|}}
    {{#section.header as |header|}}
      {{#header.content as |content|}}
        {{content.type value="Node"}}
        {{content.name value=node.name}}
      {{/header.content}}
    {{/section.header}}
  {{/sidebar.section}}

  {{#sidebar.section as |section|}}
    {{section.input label="Identifier" value=node.identifier update=(action "update" "identifier")}}
  {{/sidebar.section}}

  {{component (concat "ui-block/world/inspector/selection/node/" node.type) state=state node=node sidebar=sidebar update=(action "update")}}

  {{#sidebar.section as |section|}}
    {{section.properties label="Custom properties" value=node.properties update=(action "update" "properties")}}
  {{/sidebar.section}}

  {{#sidebar.section as |section|}}
    {{#section.actions type="grid" as |actions|}}
      {{actions.button value="Move Up" action=(action "moveUp")}}
      {{actions.button value="Move Down" action=(action "moveDown")}}
    {{/section.actions}}
    {{#section.actions as |actions|}}
      {{actions.button value="Delete Node" action=(action "deleteNode")}}
    {{/section.actions}}
  {{/sidebar.section}}

{{/ui-block/sidebar}}