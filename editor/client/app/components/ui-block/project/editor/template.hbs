<div class="content">
  {{#ui-konva/autosized class="autosized" as |autosized|}}

    {{#ui-konva/stage
      class="stage"
      size=autosized
      origin=project.origin
      update=(action "update")
      created=(action "created")
      destroying=(action "destroying")
      dragStart=(action "dragStart")
      dragEnd=(action "dragEnd")
      onClick=(action "deselect")
      draggable=isSpacePressed
    }}

      {{#ui-konva/layer}}
        {{ui-konva/project/entity project=project model=project}}
      {{/ui-konva/layer}}

      {{#ui-konva/layer}}
        {{ui-konva/project/overlay/selection project=project}}
        {{ui-konva/project/overlay/editing project=project}}
        {{ui-konva/project/overlay/resize project=project disabled=(not isSpacePressed)}}
      {{/ui-konva/layer}}

    {{/ui-konva/stage}}
  {{/ui-konva/autosized}}
</div>