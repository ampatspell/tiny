{{#ui-block/sidebar class="sidebar" disabled=project.locked as |sidebar|}}

  {{#sidebar.section class="section" as |section|}}
    {{#section.custom class="sprites"}}
      {{#ui-block/project/sidebar/sprites/list models=project.sprites.identified selected=sprite select=(action "selectSprite") as |model|}}
        {{ui-block/sprites/preview/sprite model=model class="preview clear"}}
      {{/ui-block/project/sidebar/sprites/list}}
    {{/section.custom}}
  {{/sidebar.section}}

  {{#if sprite}}

    {{#sidebar.section class="header" as |section|}}
      {{#section.header as |header|}}
        {{#header.content as |content|}}
          {{content.type value="Sprite"}}
          {{content.identifier value=selected.identifier}}
        {{/header.content}}
      {{/section.header}}
    {{/sidebar.section}}

    {{#sidebar.section class="section" as |section|}}

      {{#section.header as |header|}}
        {{#header.content as |content|}}
          {{content.identifier value="Frames"}}
        {{/header.content}}
      {{/section.header}}

      {{#if sprite.frames.identified}}
        {{#section.custom class="sprites"}}
          {{#ui-block/project/sidebar/sprites/list models=sprite.frames.identified selected=frame disabled=framesDisabled select=(action "selectFrame") as |model|}}
            {{ui-block/sprites/preview/frame model=model class="clear padded"}}
          {{/ui-block/project/sidebar/sprites/list}}
        {{/section.custom}}
      {{else}}
        {{section.placeholder value="No frames with identifiers"}}
      {{/if}}

    {{/sidebar.section}}

    {{#sidebar.section class="section" as |section|}}

      {{#section.header as |header|}}
        {{#header.content as |content|}}
          {{content.identifier value="Loops"}}
        {{/header.content}}
      {{/section.header}}

      {{#if sprite.loops.identified}}
        {{#section.custom class="sprites"}}
          {{#ui-block/project/sidebar/sprites/list models=sprite.loops.identified selected=loop disabled=loopsDisabled select=(action "selectLoop") as |model|}}
            {{ui-block/sprites/preview/loop model=model class="clear padded"}}
          {{/ui-block/project/sidebar/sprites/list}}
        {{/section.custom}}
      {{else}}
        {{section.placeholder value="No loops with identifiers"}}
      {{/if}}

    {{/sidebar.section}}

  {{/if}}

{{/ui-block/sidebar}}
