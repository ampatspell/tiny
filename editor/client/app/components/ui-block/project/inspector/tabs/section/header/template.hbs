{{#sidebar.section class="ui-block-project-insepctor-tabs-section-header" as |section|}}
  {{#section.header as |header|}}
    {{#header.content as |content|}}
      {{content.type value=type}}
      {{#if identifier}}
        {{content.identifier value=identifier}}
      {{else}}
        {{content.identifier value="No identifier" class="placeholder"}}
      {{/if}}
    {{/header.content}}
    {{header.lock locked=model.locked update=(action "locked")}}
  {{/section.header}}
{{/sidebar.section}}
