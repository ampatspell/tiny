{{#ui-block/sidebar disabled=model.render.locked as |sidebar|}}

  {{#if frame}}

    {{#sidebar.section class="no-border" as |section|}}
      {{#section.header as |header|}}
        {{#header.content as |content|}}
          {{content.type value=frame.typeName}}
          {{content.identifier value=frame.description}}
        {{/header.content}}
      {{/section.header}}
      {{ui-block/sprites/preview/frame model=frame class="padded"}}
    {{/sidebar.section}}

    {{#sidebar.section as |section|}}
      {{ui-block/project/inspector/tabs/section/item/identifier section=section model=frame}}
    {{/sidebar.section}}

    {{ui-block/project/inspector/tabs/section/properties sidebar=sidebar model=frame}}

  {{else}}

    {{#sidebar.section as |section|}}
      {{section.placeholder value="No frame selected"}}
    {{/sidebar.section}}

  {{/if}}

{{/ui-block/sidebar}}