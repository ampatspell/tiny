{{#sidebar.section as |section|}}
  {{#section.header as |header|}}
    {{#header.content as |content|}}
      {{content.type value=model.typeName}}
      {{content.identifier value=model.identifier}}
    {{/header.content}}
    {{header.lock locked=model.chainLocked update=(action "locked")}}
  {{/section.header}}
{{/sidebar.section}}

{{#sidebar.section as |section|}}
  {{section.properties label="Custom properties" value=model.properties update=(action "update" "properties")}}
{{/sidebar.section}}

{{#sidebar.section as |section|}}
  {{#section.actions as |actions|}}
    {{actions.button value="Add Fill Node" action=(action "createFillNode")}}
    {{actions.button value="Add Sprite Node" action=(action "createSpriteFrameNode")}}
    {{actions.button value="Add Loop Node" action=(action "createSpriteLoopNode")}}
  {{/section.actions}}
{{/sidebar.section}}

{{#sidebar.section as |section|}}
  {{#section.actions as |actions|}}
    {{actions.button value="Delete layer" action=(action "delete")}}
  {{/section.actions}}
{{/sidebar.section}}
