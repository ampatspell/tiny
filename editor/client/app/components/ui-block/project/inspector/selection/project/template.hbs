{{#sidebar.section class="header" as |section|}}
  {{#section.header as |header|}}
    {{#header.content as |content|}}
      {{content.type value=model.title}}
    {{/header.content}}
    {{header.lock locked=model.chainLocked update=(action "locked")}}
  {{/section.header}}
{{/sidebar.section}}

{{#sidebar.section as |section|}}
  {{section.input label="Title" value=project.title update=(action "update" "title")}}
{{/sidebar.section}}

{{#sidebar.section as |section|}}
  {{section.properties label="Custom properties" value=model.properties update=(action "update" "properties")}}
{{/sidebar.section}}

{{#sidebar.section as |section|}}
  {{#section.actions as |actions|}}
    {{actions.button value="Add new scene" action=(action "createScene")}}
    {{actions.button value="Add new sprite" action=(action "createSprite")}}
  {{/section.actions}}
{{/sidebar.section}}
