<div class="content">
  {{#ui-konva/autosized class="autosized" as |autosized|}}

    {{#ui-konva/stage
      class="stage"
      size=autosized
      created=(action "created")
      destroying=(action "destroying")
      onClick=(action "onStageClick")
      draggable=isSpacePressed
    }}

      {{#each state.world.scenes.ordered as |scene idx|}}
        {{#ui-konva/layer idx=idx}}
          {{ui-konva/world/scene
            __index=scene.index
            scene=scene
            pixel=state.pixel
            selected=(eq selectedScene scene)
            selection=state.selection
            select=(action "select")
            selectParent=(action "selectParent")
            update=(action "update")
            disabled=(or isSpacePressed scene.chainLocked)
            hidden=scene.hidden
          }}
        {{/ui-konva/layer}}
      {{/each}}

    {{/ui-konva/stage}}
  {{/ui-konva/autosized}}
</div>