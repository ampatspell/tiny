{{#ui-block/sidebar disabled=locked as |sidebar|}}

  {{#sidebar.section class="header" as |section|}}
    {{#section.header as |header|}}
      {{#header.content as |content|}}
        {{content.type value="Scene"}}
        {{content.name value=scene.name}}
        {{content.identifier value=scene.identifier}}
      {{/header.content}}
    {{/section.header}}
  {{/sidebar.section}}

  {{#sidebar.section as |section|}}
    {{section.input label="Name" value=scene.name update=(action "update" "name")}}
    {{section.input label="Identifier" value=scene.identifier update=(action "update" "identifier")}}
  {{/sidebar.section}}

  {{#sidebar.section as |section|}}
    {{section.position label="Position" value=scene.position update=(action "update" "position")}}
  {{/sidebar.section}}

  {{#sidebar.section as |section|}}
    {{section.size label="Size" value=scene.size update=(action "update" "size")}}
  {{/sidebar.section}}

  {{#sidebar.section as |section|}}
    {{section.segments label="Background" items=backgrounds selected=background update=(action "background")}}
  {{/sidebar.section}}

  {{#sidebar.section as |section|}}
    {{#section.actions as |actions|}}
      {{actions.button value="Add Grid Layer" action=(action "createGridLayer")}}
      {{actions.button value="Add Pixel Layer" action=(action "createPixelLayer")}}
      {{actions.button value="Delete Scene" action=(action "deleteScene")}}
    {{/section.actions}}
  {{/sidebar.section}}

{{/ui-block/sidebar}}
