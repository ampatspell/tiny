{{ui-konva/text props=(hash
    x=0
    y=-13
    fontFamily="Roboto Mono"
    fontSize=11
    fill="rgba(0,0,0,0.9)"
    text=(concat scene.name ' (' scene.identifier ')')
)}}

{{#if selected}}
  {{ui-konva/world/scene/selected pixel=pixel size=scene.size}}
{{/if}}

{{ui-konva/world/scene/background
    size=scene.size
    background=scene.background
    pixel=pixel
}}

{{ui-konva/world/scene/grid
    grid=scene.grid
    size=scene.size
    background=scene.background
    pixel=pixel
}}

{{ui-konva/world/scene/layers
    scene=scene
    pixel=pixel
    select=select
    update=update
    disabled=(or disabled scene.locked)
    hidden=(or hidden scene.hidden)
}}
