{{ui-konva/rect props=(hash
    x=rect.x
    y=rect.y
    width=rect.width
    height=rect.height
    stroke=color
    strokeWidth=1
    visible=(not disabled)
    listening=false
)}}

{{ui-konva/text props=(hash
    x=(add rect.x -1)
    y=(add rect.y -11)
    fontFamily="Roboto Mono"
    fontSize=11
    fontStyle="bold"
    text=targetSizeString
    visible=(not disabled)
    listening=false
)}}

{{ui-konva/pixel/resize/handle
    x=position.x.mid
    y=position.y.min
    disabled=disabled
    color=color
    clamp=(action 'clamp' 'top')
    commit=(action 'commit' 'top')
}}

{{ui-konva/pixel/resize/handle
    x=position.x.mid
    y=position.y.max
    disabled=disabled
    color=color
    clamp=(action 'clamp' 'bottom')
    commit=(action 'commit' 'bottom')
}}

{{ui-konva/pixel/resize/handle
    x=position.x.min
    y=position.y.mid
    disabled=disabled
    color=color
    clamp=(action 'clamp' 'left')
    commit=(action 'commit' 'left')
