{{ui-konva/pixel/resize/handle x=position.x.min y=position.y.mid disabled=disabled color=color clamp=(action 'clamp' 'left')}}
{{ui-konva/pixel/resize/handle x=position.x.max y=position.y.mid disabled=disabled color=color clamp=(action 'clamp' 'right')}}
