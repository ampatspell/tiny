<div class="content">
  {{#ui-konva/autosized class="autosized" as |autosized|}}
    {{#ui-konva/stage class="stage" size=autosized created=(action "created")}}
      {{#ui-konva/layer}}

        {{#if bytes}}

          {{#ui-konva/group props=position}}
            {{ui-konva/pixel/grid pixel=pixel size=size bytes=bytes update=(action "update") disabled=(or isSpacePressed isAltPressed)}}
            {{ui-konva/pixel/resize pixel=pixel size=size disabled=(not isSpacePressed) commit=(action "resize")}}
            {{ui-konva/pixel/select pixel=pixel size=size disabled=(not isAltPressed) begin=(action "move")}}
          {{/ui-konva/group}}

        {{/if}}

      {{/ui-konva/layer}}
    {{/ui-konva/stage}}
  {{/ui-konva/autosized}}
</div>