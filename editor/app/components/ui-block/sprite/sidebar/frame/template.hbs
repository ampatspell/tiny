{{#ui-block/sidebar/section class="header" disabled=locked as |section|}}

    {{#section.padded class="title"}}
      <div class="content">
        <div class="row">
          <div class="identifier">{{sprite.identifier}}</div>
          <div class="name">{{sprite.name}}</div>
        </div>
        <div class="size">{{size sprite.size 'px'}}</div>
        {{#if frame}}
          <div class="frame">#{{frame.index}}</div>
        {{/if}}
      </div>
      <div class="accessories">
        {{#if locked}}
          <div class="icon" role="button" {{action (action "locked" false)}}>{{fa-icon "lock"}}</div>
        {{else}}
          <div class="icon" role="button" {{action (action "locked" true)}}>{{fa-icon "unlock"}}</div>
        {{/if}}
      </div>
    {{/section.padded}}

    {{#if frame}}
      {{#section.padded class="preview"}}
        {{ui-block/sprite/frame/preview frame=frame}}
      {{/section.padded}}
    {{/if}}

{{/ui-block/sidebar/section}}

{{#if frame}}

  {{#ui-block/sidebar/section disabled=locked as |section|}}

    {{#section.actions type="grid" as |actions|}}
      {{actions.button value="Clear" action=(action "fill" 0)}}
      {{actions.button value="Fill" action=(action "fill" 2)}}
      {{actions.button value="Invert" action=(action "invert")}}
    {{/section.actions}}

  {{/ui-block/sidebar/section}}

  {{#ui-block/sidebar/section disabled=locked as |section|}}

    {{#section.actions as |actions|}}
      {{actions.button value="Duplicate" action=(action "duplicate")}}
      {{actions.button value="Delete" action=(action "delete")}}
    {{/section.actions}}

  {{/ui-block/sidebar/section}}

{{else}}

  {{#ui-block/sidebar/section disabled=locked as |section|}}

    {{#section.actions as |actions|}}
      {{actions.button value="Create first frame" action=(action "create")}}
    {{/section.actions}}

  {{/ui-block/sidebar/section}}

{{/if}}