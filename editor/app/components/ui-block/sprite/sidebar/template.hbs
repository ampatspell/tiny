<div class="section">
  <div class="row title">
    <div class="content">
      <div class="row">
        <div class="identifier">{{sprite.identifier}}</div>
        <div class="name">{{sprite.name}}</div>
      </div>
      <div class="size">{{sprite.size.width}}Ã—{{sprite.size.height}}px</div>
      {{#if frame}}
        <div class="frame">#{{frame.index}}</div>
      {{/if}}
    </div>
    <div class="accessories">
      {{#if locked}}
        <div class="icon" role="button" {{action (action "locked" false)}}>{{fa-icon "lock"}}</div>
      {{else}}
        <div class="icon" role="button" {{action (action "locked" true)}}>{{fa-icon "unlock"}}</div>
      {{/if}}
    </div>
  </div>

  {{#if frame}}
    <div class="row preview">
      {{ui-block/sprite/frame/preview frame=frame}}
    </div>
  {{/if}}
</div>

{{#if frame}}

  <div class="section">
    <div class="row sizes">
      {{ui-block/slider class="slider" min=1 max=32 value=state.pixel update=(action "pixel")}}
      {{ui-block/input class="input" value=state.pixel enter=(action "pixel") delayed=true}}
    </div>

    <div class="row actions">
      {{ui-block/button value="Center" action=(action "center")}}
    </div>

  </div>
  <div class="section">

    <div class="row actions">
      {{ui-block/button value="Clear" disabled=locked action=(action "fill" 0)}}
      {{ui-block/button value="Fill" disabled=locked action=(action "fill" 2)}}
      {{ui-block/button value="Invert" disabled=locked action=(action "invert")}}
    </div>

    <div class="row actions">
      {{ui-block/button value="Duplicate" disabled=locked action=(action "duplicate")}}
    </div>
    <div class="row actions">
      {{ui-block/button value="Delete" disabled=locked action=(action "delete")}}
    </div>

  </div>

{{else}}

  <div class="section">
    <div class="row actions">
      {{ui-block/button value="Create first frame" disabled=locked action=(action "create")}}
    </div>
  </div>

{{/if}}