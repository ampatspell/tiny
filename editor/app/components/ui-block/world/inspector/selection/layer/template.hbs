{{#ui-block/sidebar disabled=locked as |sidebar|}}

  {{#sidebar.section class="header" as |section|}}
    {{#section.header as |header|}}
      {{#header.content as |content|}}
        {{content.type value="Layer"}}
        {{content.name value=layer.name}}
      {{/header.content}}
    {{/section.header}}
  {{/sidebar.section}}

  {{component (concat "ui-block/world/inspector/selection/layer/" layer.type) state=state layer=layer sidebar=sidebar update=(action "update")}}

  {{#sidebar.section as |section|}}
    {{#section.actions as |actions|}}
      {{actions.button value="Add Fill Node" action=(action "createFillNode")}}
      {{actions.button value="Add Sprite Node" action=(action "createSpriteNode")}}
    {{/section.actions}}
  {{/sidebar.section}}

  {{#sidebar.section as |section|}}
    {{#section.actions type="grid" as |actions|}}
      {{actions.button value="Move Up" action=(action "moveUp")}}
      {{actions.button value="Move Down" action=(action "moveDown")}}
    {{/section.actions}}
    {{#section.actions as |actions|}}
      {{actions.button value="Delete Layer" action=(action "deleteLayer")}}
    {{/section.actions}}
  {{/sidebar.section}}

{{/ui-block/sidebar}}