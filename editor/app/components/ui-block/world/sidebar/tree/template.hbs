{{#if state.world.scenes}}

  {{#let (hash
    content="ui-block/world/sidebar/tree/content/"
    row="ui-block/world/sidebar/tree/content"
  ) as |c|}}

    {{#ui-block/tree class="tree" select=(action "select") selected=state.selection as |row|}}
      {{#each state.world.scenes as |scene|}}
        {{#row model=scene class="scene" content=(component c.row content=(component (concat c.content "scene") state=state scene=scene) model=scene) as |row|}}
          {{#each scene.layers as |layer|}}
            {{#row model=layer class="layer" content=(component c.row content=(component (concat c.content "layer") state=state layer=layer) model=layer) as |row|}}
              {{#each layer.nodes as |node|}}
                {{row model=node class="node" content=(component c.row content=(component (concat c.content "node") state=state node=node) model=node)}}
              {{/each}}
            {{/row}}
          {{/each}}
        {{/row}}
      {{/each}}
    {{/ui-block/tree}}

  {{/let}}

{{else}}

  <div class="placeholder">No scenes</div>

{{/if}}