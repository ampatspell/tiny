{{#if selection}}
  {{#if selection.isScene}}
    {{ui-block/world/sidebar/selection/scene state=state}}
  {{else if selection.isLayer}}
    {{ui-block/world/sidebar/selection/layer state=state}}
  {{else if selection.isNode}}
    {{ui-block/world/sidebar/selection/node state=state}}
  {{/if}}
{{else}}
  {{ui-block/world/sidebar/selection/world state=state}}
{{/if}}
