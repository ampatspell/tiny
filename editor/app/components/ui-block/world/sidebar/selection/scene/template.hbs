{{#ui-block/sidebar/section class="header" as |section|}}
  {{#section.header as |header|}}
    {{#header.content as |content|}}
      {{content.type value="Scene"}}
      {{content.name value=scene.name}}
      {{content.identifier value=scene.identifier}}
    {{/header.content}}
  {{/section.header}}
{{/ui-block/sidebar/section}}

{{#ui-block/sidebar/section disabled=locked as |section|}}
  {{#section.actions as |actions|}}
    {{actions.button value="Delete Scene" action=(action 'deleteScene')}}
  {{/section.actions}}
{{/ui-block/sidebar/section}}