<div class="section">
  <div class="row title">
    <div class="content">
      <div class="row">
        <div class="name">{{world.name}}</div>
      </div>
    </div>
    <div class="accessories">
      {{#if locked}}
        <div class="icon" role="button" {{action (action "locked" false)}}>{{fa-icon "lock"}}</div>
      {{else}}
        <div class="icon" role="button" {{action (action "locked" true)}}>{{fa-icon "unlock"}}</div>
      {{/if}}
    </div>
  </div>

  <div class="row sizes">
    {{ui-block/slider class="slider" min=1 max=32 value=state.pixel update=(action "pixel")}}
    {{ui-block/input class="input" value=state.pixel enter=(action "pixel") delayed=true}}
  </div>
  <div class="row actions">
    {{ui-block/button value="Center" action=(action "center")}}
  </div>
</div>

{{#ui-block/tabs class="tabs" selected=tab select=(action "select") as |tabs|}}
  {{tabs.tab label="World" id="world" component=(component "ui-block/world/sidebar/world" state=state)}}
  {{tabs.tab label="Scene" id="scene" component=(component "ui-block/world/sidebar/scene" state=state)}}
  {{tabs.tab label="Node"  id="node"  component=(component "ui-block/world/sidebar/node"  state=state)}}
{{/ui-block/tabs}}
