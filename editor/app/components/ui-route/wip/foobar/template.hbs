  <div>#{{frame.index}} {{frame.size.width}}x{{frame.size.height}}px</div>

  {{ui-block/sprite/frame/editor frame=frame size=size update=(action "update") class="editor"}}

  <div class="actions">
    {{ui-block/button value="Large" action=(action "size" "large")}}
