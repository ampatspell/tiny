<div class="editor">
  {{#ui-konva/autosized class="autosized" as |size|}}
    {{#ui-konva/stage class="stage" size=size as |parent|}}

      {{#parent.layer as |parent|}}

        {{#parent.group props=(hash x=x y=y) as |parent|}}

          {{parent.rect
            props=(hash
              x=0
              y=0
              width=width
              height=height
              fill="rgba(255,0,0,0.2)"
              stroke="rgba(0,0,0,0.5)"
              strokeWidth=1
          )}}

          {{parent.rect
            props=(hash
              x=5
              y=5
              width=width
              height=height
              fill="rgba(255,0,0,0.2)"
              stroke="rgba(0,0,0,0.5)"
              strokeWidth=1
          )}}

        {{/parent.group}}

      {{/parent.layer}}

    {{/ui-konva/stage}}
  {{/ui-konva/autosized}}
</div>

<div class="sidebar">
  <div class="section">
    <div class="row">
      {{ui-block/button value='Reset' action=(action 'reset')}}
    </div>
    <div class="row">
      {{ui-block/slider min=0 max=300 step=0.5 value=x update=(action 'update' 'x')}}
    </div>
    <div class="row">
      {{ui-block/slider min=0 max=300 step=0.5 value=y update=(action 'update' 'y')}}
    </div>
    <div class="row">
      {{ui-block/slider min=0 max=100 step=1 value=width update=(action 'update' 'width')}}
    </div>
    <div class="row">
      {{ui-block/slider min=0 max=100 step=1 value=height update=(action 'update' 'height')}}
    </div>
  </div>
</div>